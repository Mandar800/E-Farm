<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:animateLayoutChanges="true"
    >
    <LinearLayout
        android:id="@+id/ordercard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@drawable/order_card_not_compleate"
        >
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/ordername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="20dp"
                android:textStyle="bold"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/ordernum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textSize="15dp"
                android:layout_marginTop="5dp"

                />
            <TextView
                android:visibility="gone"
                android:id="@+id/orderadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="address asdhajfbjdsfsdbf sdfsdbfhjbsbhj sfhbjhfbhj bhjbjhbb dhjbhjfdbbhdfhjgbdfb b dhfb hb jhdf"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:id="@+id/orderstatus"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:textSize="20dp"
                android:textColor="@color/Pedding"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/orderdate"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00-24-1423"
                android:textSize="15dp"
                android:textStyle="bold"

                />
            <TextView
                android:visibility="gone"
                android:id="@+id/orderhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order -"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/ordercontent"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="10kg onions = 100 Rs \n5kg Tomato's = 50 Rs"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/ordertottal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100 Rs"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center"
                />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            >

            <Button
                android:visibility="gone"
                android:id="@+id/orderdone"
                android:layout_marginHorizontal="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delivered"
                android:layout_weight="5"
                android:textAllCaps="false"
                android:layout_marginVertical="10dp"
                android:textColor="@color/WHite"
                android:background="@drawable/green_button"
                />
            <Button
                android:visibility="gone"
                android:id="@+id/orderdelete"
                android:layout_marginHorizontal="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_weight="5"
                android:textAllCaps="false"
                android:layout_marginVertical="10dp"
                android:textColor="@color/WHite"
                android:background="@drawable/delete_button"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>